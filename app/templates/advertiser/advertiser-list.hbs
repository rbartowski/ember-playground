
  <div class="row vertical-align">
    <div class="col-md-6">
      <h2>Advertisers</h2>
    </div>
    <div class="col-md-6">
      <input class="form-control" placeholder="Search">
    </div>
  </div>
  <div class="row">
    <table class="table table-striped table-condensed table-hover">
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Managed By</th>
        <th>Created</th>
        <th></th>
      </tr>
      {{#each advertiser in model}}
      <tr>
        <td>{{advertiser.refId}}</td>
        <td>{{#link-to 'advertiser.advertiserDetails.index' advertiser}}{{advertiser.name}}{{/link-to}}</td>
        <td>{{advertiser.ownerName}}</td>
        <td>{{formatted-date advertiser.created 'YYYY-MM-DD'}}</td>
        <td><a class="thumb"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>
      </tr>
      {{/each}}
    </table>
  </div>
